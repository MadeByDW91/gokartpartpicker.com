{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "typeRoots": [
      "../frontend/node_modules/@types",
      "../node_modules/@types",
      "./node_modules/@types",
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@supabase/supabase-js": ["../frontend/node_modules/@supabase/supabase-js"]
    }
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
